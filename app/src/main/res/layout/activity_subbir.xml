<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageViewSubbir"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@mipmap/subbir" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Subbir Reza"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />


        <ListView
            android:id="@+id/listView3"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/subbir_call_Button"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@mipmap/call_logo" />

            <ImageButton
                android:id="@+id/subbir_sms_Button"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@mipmap/sms_logo" />

            <ImageButton
                android:id="@+id/subbir_fb_Button"
                android:layout_width="25dp"
                android:layout_height="61dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@mipmap/fb_logo" />

            <ImageButton
                android:id="@+id/subbir_mail_Button"
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@mipmap/mail_logo" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>